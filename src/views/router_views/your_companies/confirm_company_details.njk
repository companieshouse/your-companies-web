{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% extends "layouts/default.njk" %}

{% block beforeMainContent %}
    {% block backLink %}
    {% include "partials/back_link.njk" %}
    {% endblock %} 
{% endblock %}

{% block main_content %}

    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-l govuk-!-margin-bottom-6">
            {{ lang.confirm_this_is_the_correct_company }}
        </h1>

{{ govukSummaryList({
  rows: [
    {
      key: {
        text: lang.company_name
      },
      value: {
        text: companyName
      }
    },
    {
      key: {
        text: lang.company_number
      },
      value: {
        text: companyNumber
      }
    },
    {
      key: {
        text: lang.status
      },
      value: {
        text: companyStatus
      }
    },
    {
      key: {
        text: lang.incorporation_date 
      },
      value: {
        html: dateOfCreation
      }
    },
    {
      key: {
        text: lang.company_type
      },
      value: {
        text: type
      }
    },
    {
      key: {
        text: lang.registered_office_address
      },
      value: {
        html: registeredOfficeAddress
      }
    }
  ]
}) }}

    <form method="post">
        <div class="govuk-button-group">

          {{ govukButton({
            text: lang.confirm_and_continue,
            attributes: {
              "id": "submit"
            }
          }) }}

        </div>
    </form>

        <p class="govuk-body">
            <a href={{backLinkUrl}} class="govuk-link govuk-link--no-visited-state">{{ lang.choose_a_different_company }}</a>.
        </p>
    </div>
{% endblock %}
