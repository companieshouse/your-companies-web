{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/details/macro.njk" import govukDetails %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% extends "layouts/default.njk" %}

{% if error == "you_must_enter_a_company_number" %}
    {% set message = {
        text: you_must_enter_a_company_number
    } %}
{% elif error == "there_is_no_company_registered" %}
    {% set message = {
        text: there_is_no_company_registered
    } %}
{% else %}
    {% set message = null %}
{% endif %}

{% block back_link %}

    {{ govukBackLink({text: back_link, href: backLinkHref}) }}

{% endblock %}

{% block main_content %}

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <h1 class="govuk-heading-xl">{{ enter_the_details_of_the_company }}</h1>
            <form method="post">
                {{ govukInput({
                        label: {
                            text: what_is_the_company_number
                        },
                        id: "companyNumber",
                        name: "companyNumber",
                        errorMessage: message
                    })
                }}

                {{ govukDetails({
                        summaryText: help_with_company_number,
                        html: you_can_find_this_by_searching
                    })
                }}

                {{ govukButton({text: continue, type: "submit"}) }}
            </form>
        </div>
    </div>

{% endblock %}