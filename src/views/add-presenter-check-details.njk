{% block main_content %}

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
        <span class="govuk-caption-l">{{companyName}} ({{companyNumber}})</span>
        <h1 class="govuk-heading-l govuk-!-margin-bottom-6">
            {{ lang.check_authorised_persons_email_address }}
        </h1>


            <form method="post">


{{ govukSummaryList({
  rows: [
   {
      key: {
        text: ""
      },
      value: {
        html: ""
      },
      actions: {
        items: [
          {
          text:""
          }
        ]
      }
    },
    {
      key: {
        text: lang.email_address
      },
      value: {
        html: emailAddress
      },
      actions: {
        items: [
          {
            href: backLinkHref,
            text: lang.change,
            visuallyHiddenText: lang.change
          }
        ]
      }
    }
  ]
}) }}


                {% set button_attributes = {
                    role: "button",
                    "aria-label": lang.continue_button_to_proceed_to_the_next_page
                } %}
                {{ govukButton({text: lang.confirm_and_send_email, type: "submit", attributes: button_attributes }) }}
            </form>

        </div>
    </div>
{% endblock %}