{% extends "layouts/default.njk" %}

{% block main_content %}

    {% if numberOfInvitations > 0 %}
        {% include "user-invitations-banner.njk" %}
    {% endif %}
    {% if displaySearchForm %}
        <h1 class="govuk-heading-l govuk-!-margin-bottom-6">{{ lang.your_companies }}</h1>
    {% else %}
        <h1 class="govuk-heading-xl govuk-!-margin-bottom-9">{{ lang.your_companies }}</h1>
    {% endif %}
    {% if userHasCompanies == "true" %}
        {% include "previously-added-companies.njk" %}
    {% else %}
        <hr class="govuk-section-break govuk-section-break--l govuk-section-break--visible">
        {% include "no-companies-added.njk" %}
    {% endif %}

{% endblock %}