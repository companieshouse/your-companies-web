{% extends "layouts/default.njk" %}
{% set title = lang.title_your_companies %}
{% for key, value in errors %}
    {% if key == "search" %}
        {% set title = lang.title_error + lang.title_your_companies %}
    {% endif %}
{% endfor %}

{% block main_content %}
    <h1 class="govuk-heading-xl govuk-!-margin-bottom-1">{{ lang.your_companies }}</h1>
    {% if displaySearchForm %}
        <p class="govuk-body govuk-!-margin-bottom-6">
            <a class="govuk-notification-banner__link" href="{{viewInvitationsPageUrl}}">{{lang.view_invitations}} &#40;{{numberOfInvitations}}&#41;</a>
        </p>
    {% else %}
        <p class="govuk-body govuk-!-margin-bottom-9">
            <a class="govuk-notification-banner__link" href="{{viewInvitationsPageUrl}}">{{lang.view_invitations}} &#40;{{numberOfInvitations}}&#41;</a>
        </p>
    {% endif %}

    {% if userHasCompanies == "true" %}
        {% include "previously-added-companies.njk" %}
    {% else %}
        <hr class="govuk-section-break govuk-section-break--l govuk-section-break--visible">
        {% include "no-companies-added.njk" %}
    {% endif %}

{% endblock %}