{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/details/macro.njk" import govukDetails %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% extends "layouts/default.njk" %}

{% set message = null %}
{% set title = lang.title_add_company %}

{% for key, value in errors %}
    {% if key == "companyNumber" %}
        {% set message = {
            text: lang[value.text]
        } %}
        {% set title = lang.title_error + lang.title_add_company %}
    {% endif %}
{% endfor %}

{% block back_link %}
    {% include "partials/back_link.njk" %}
{% endblock %}

{% block main_content %}

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <form method="post">
                {{ govukInput({
                        label: {
                            text: lang.what_is_the_company_number,
                            classes: "govuk-label--l",
                            isPageHeading: true
                        },
                        hint: {
                            text: lang.a_company_number_is_8_characters_long
                        },
                        classes: "govuk-input--width-10",
                        id: "companyNumber",
                        name: "companyNumber",
                        errorMessage: message,
                        value: proposedCompanyNumber
                    })
                }}

                {{ govukDetails({
                        summaryText: lang.how_do_i_find_the_company_number,
                        html: lang.you_can_find_this_by_searching
                    })
                }}

                {% set button_attributes = {
                    role: "button",
                    "aria-label": lang.continue_button_to_proceed_to_the_next_page,
                    id: "continue-button",
                    "data-event-id": "continue-button-event"
                } %}
                {{ govukButton({ text: lang.continue, type: "submit", attributes: button_attributes }) }}
            </form>
        </div>
    </div>

    <script>
        trackEvent("continue-button", "{{title}}", "{{matomoButtonClick}}", "{{matomoContinueButton}}");
        trackEvent("back-link-to-previous-page", "{{title}}", "{{matomoLinkClick}}", "{{matomoBackLink}}");
    </script>

{% endblock %}