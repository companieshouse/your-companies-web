{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/details/macro.njk" import govukDetails %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/notification-banner/macro.njk" import govukNotificationBanner %}
{% from "govuk/components/inset-text/macro.njk" import govukInsetText %}

{% extends "layouts/default.njk" %}

{% set title = lang.you_have_added + companyName + lang.title_finish %}

{% block main_content %}

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">

            {% set html %}
            <p class="govuk-notification-banner__heading">
                {{lang.you_have_added}}{{companyName}}.
            </p>
            {% endset %}

            {{ govukNotificationBanner({
                    html: html,
                    type: "success",
                    titleText: lang.success
                })
            }}

            <h1 class="govuk-heading-l">
                <span class="govuk-caption-l">{{companyName}} ({{companyNumber}})</span>
                {{lang.what_happens_now}}
            </h1>

            <p class="govuk-body">{{ lang.you_can_now }}</p>
            <ul class="govuk-list govuk-list--bullet">
                <li>{{ lang.bullet_1 }}</li>
                <li>{{ lang.bullet_2 }}</li>
                <li>{{ lang.bullet_3 }}</li>
            </ul>

            <p class="govuk-body">{{ lang.keep_the_authentication_code }}</p>

            {{ govukInsetText({ text: lang.last_paragraph }) }}

            {% set button_attributes = {
                    role: "button",
                    id: "go-to-your-companies-button",
                    "data-event-id": "go-to-your-companies"
            } %}
            {{ govukButton({
            text: lang.go_to_your_companies,
            href: buttonHref,
            attributes: button_attributes
            }) }}

        </div>
    </div>

{% endblock %}